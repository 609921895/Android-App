<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csci150.newsapp.entirenews.LibActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Libraries We Use"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_full"
        android:background="@color/mid_grey"
        android:padding="@dimen/margin_full"
        android:text="The following sets forth attribution notices for third oparty software that may be contained in portions of the Entire News Application. Thanks to open source community for all their contributions"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Retrofit"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="Glide"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="Calligraphy"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="Joda Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android About Page "
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />


</LinearLayout>